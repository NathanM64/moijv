{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Profil {% endblock %}

{% block body %}
    <section class="row">
        <div class="col-3">
            <img class="img-fluid" src="{{ user.avatar ? asset(user.avatar) : 'http://placehold.it/300x300' }}" alt="">
        </div>
        <div class="col-9">
            <h2>{{ user.firstname }} {{ user.lastname }}</h2>
            <p>Inscrit le {{ user.dateRegister | date('d/m/Y') }}</p>
        </div>
    </section>

    <section>
        <ul>
            {% for game in user.games %}
                <li><a href="{{ path('game_details', {id: game.id}) }}"></a>{{ game.name }}</li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
